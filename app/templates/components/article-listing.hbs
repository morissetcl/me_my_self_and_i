{{yield}}
<article class="listing">
  <a {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">
    <img src="{{article.image}}" alt="">
    <small>View Larger</small>
  </a>
  <h3>{{#link-to "articles.show" article class=article.id}}{{article.title}}{{/link-to}}</h3>
  <div class="detail summerize">
    {{article.summerize}}
  </div>
  <div class="detail ok">
    {{article.created_at}}
  </div>
</article>
