{{yield}}
<article class="listing">
  <div class="content-wrapper">
    <a {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">
      <img src="{{article.image}}" alt="">
    </a>
    <div class="coucou">
      <h3>{{article.title}}</h3>
      <div class="detail summerize">
        {{article.summerize}}
      </div>
    </div>
  </div>
  <div class=" date">
    {{article.created}}
  </div>
</article>
