<form>
  <div>
    {{paper-input class="flex-30" label="E-mail" type="email" value=model.email onChange=(action (mut model.email)) required=true}}
  </div>
  <div>
    {{paper-input textarea=true block=true label="Content" maxlength=500 passThru=(hash rows=5 maxRows=5)
value=model.content onChange=(action (mut model.content)) required=true}}
  </div>
  <div>
    {{#paper-button raised=true onClick=(action "save")}}Send{{/paper-button}}
  </div>
</form>
